import acg
from acg.util import bin2asc, print_tag

def do_continuous(card):
	prev_tag = None
	while True:
		try:
			tag = card.continuous_read()
			if not tag:
				return
		except acg.ACG_Exception, e:
			print e.msg
			return
		if not prev_tag or tag.serial != prev_tag.serial:
			print_tag(tag)
		prev_tag = tag

def do_multiselect(card):
	try:
		tags = card.multi_select()
	except acg.ACG_Exception, e:
		print e.msg
		return
	for tag in tags:
		#card.select(tag)
		print_tag(tag)
	print

def do_select(card):
	try:
		tag = card.select()
	except acg.ACG_Exception, e:
		print e.msg
		return
	print_tag(tag)

if __name__ == '__main__':
	for dev in acg.get_devlist():
		if dev.vendor:
			print dev.vendor
		if dev.vendor:
			print dev.product
		print "%s @ %u baud"%(dev.tty, dev.suggested_baud)
		try:
			card = acg.acg(line=dev.tty,
					baud = dev.suggested_baud,
					tracefile="acgtool.trace")
		except acg.ACG_Exception, e:
			print "ERROR: %s"%e.msg
			print
			continue

		do_select(card)
		#do_multiselect(card)
		#do_continuous(card)
